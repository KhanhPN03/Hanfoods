# ==============================================================================
# HAN FOODS E-COMMERCE - FRONTEND ENVIRONMENT CONFIGURATION
# ==============================================================================
# ðŸ”’ Security Notice: Only public environment variables should be here.
# Sensitive data should never be stored in frontend environment variables.
# ==============================================================================

# Application Configuration
REACT_APP_ENV=development
REACT_APP_NAME=HanFoods E-Commerce
REACT_APP_VERSION=1.0.0

# API Configuration
# Backend API Base URL - This is the main URL for all API calls
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_VERSION=v1
REACT_APP_API_PREFIX=/api

# Specific API Endpoints (for better organization)
REACT_APP_AUTH_API_URL=http://localhost:5000/api/auth
REACT_APP_PRODUCTS_API_URL=http://localhost:5000/api/products
REACT_APP_ORDERS_API_URL=http://localhost:5000/api/orders
REACT_APP_ADMIN_API_URL=http://localhost:5000/api/admin
REACT_APP_CART_API_URL=http://localhost:5000/api/carts
REACT_APP_WISHLIST_API_URL=http://localhost:5000/api/wishlists
REACT_APP_ADDRESSES_API_URL=http://localhost:5000/api/addresses
REACT_APP_PAYMENTS_API_URL=http://localhost:5000/api/payments
REACT_APP_UPLOAD_API_URL=http://localhost:5000/api/upload

# Frontend Configuration
REACT_APP_BASE_URL=http://localhost:3000
REACT_APP_ADMIN_BASE_URL=http://localhost:3000/admin

# Features Toggle (enable/disable features)
REACT_APP_ENABLE_GOOGLE_LOGIN=false
REACT_APP_ENABLE_SOCIAL_MEDIA=true
REACT_APP_ENABLE_WISHLIST=true
REACT_APP_ENABLE_REVIEWS=true
REACT_APP_ENABLE_DISCOUNTS=true

# UI Configuration
REACT_APP_DEFAULT_CURRENCY=VND
REACT_APP_DEFAULT_LANGUAGE=vi
REACT_APP_ITEMS_PER_PAGE=12
REACT_APP_MAX_CART_ITEMS=99

# File Upload Limits (for frontend validation)
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Third-party Services (public keys only)
REACT_APP_GOOGLE_CLIENT_ID=placeholder_client_id
REACT_APP_ANALYTICS_ID=your-google-analytics-id

# Development Configuration
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# Build Configuration
GENERATE_SOURCEMAP=true
REACT_APP_BUILD_DATE=2025-06-23
