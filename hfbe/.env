# Application Configuration
NODE_ENV=development
PORT=5000
APP_NAME=HanFoods Backend API
APP_VERSION=1.0.0

# Base URLs and API Configuration
# Backend API Base URL - Used for internal server communications
API_BASE_URL=http://localhost:5000
API_VERSION=v1
API_PREFIX=/api

# Frontend Configuration (for CORS and redirects)
FRONTEND_URL=http://localhost:3000
FRONTEND_ADMIN_URL=http://localhost:3000/admin

# Database Configuration
MONGO_URI=mongodb://localhost:27017/hanfoods
MONGO_DB_NAME=hanfoods

# Authentication & Security
JWT_SECRET=dev_jwt_secret_replace_in_production_min_32_chars_for_security
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=dev_session_secret_replace_in_production_min_32_chars_for_security
SESSION_EXPIRES=86400000

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration (if using email services)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@hanfoods.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@hanfoods.com

# Payment Gateway Configuration
VIETQR_ACCOUNT_NUMBER=0123456789
VIETQR_ACCOUNT_NAME=Han Foods
VIETQR_BANK_CODE=VNPAY
PAYMENT_CALLBACK_URL=http://localhost:5000/api/payments/callback

# Google OAuth Configuration
GOOGLE_CLIENT_ID=placeholder_client_id
GOOGLE_CLIENT_SECRET=placeholder_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Admin Configuration
ADMIN_EMAIL=admin@hanfoods.com
ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_ROLE=admin
